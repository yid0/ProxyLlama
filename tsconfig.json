{
  "include": ["src/**/*.ts", "main.ts"],
  "exclude": ["node_modules/**","**/*.test.ts"],
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "moduleDetection": "auto",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src"
  }
}
